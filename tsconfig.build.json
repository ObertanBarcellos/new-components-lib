{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "incremental": false
  },
  "include": [
    "src/**/*.ts",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "stories",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "app"
  ]
}

